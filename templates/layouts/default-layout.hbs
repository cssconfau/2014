  </head>
  <body class="{{pageClass}}" id="overrides">

    <header {{#unless hideLogo}}class="with-logo"{{/unless}}>
      {{#unless hideLogo}}<h1 class="logo"><a href="/"><img src="{{assets}}/images/logo-without-subhead.svg" alt="CSSConf"></a></h1>{{/unless}}
      {{#if hideLocationInHeader}}
        <p class="when"><time datetime="2014-04-08">April 8–11, 2014</time></p>
      {{else}}
        <p class="when-where"><time datetime="2014-04-08">April 8–11, 2014</time> <span class="where">Melbourne, Aus</span></p>
      {{/if}}
      <p class="tickets"><a class="button" href="{{ticketsUrl}}">Purchase tickets</a></p>
    </header>

    <article>
      {{> body }}
    </article>

    <footer>
      <div class="inner">
        <div class="oh-hai">&nbsp;</div>
      </div>
    </footer>

    <script>
      // Fix up obscured mailto links
      (function(links) {
        var domain = 'cssconf.com.au', placeholder = 'THISDOMAIN';
        for (var i = 0; i < links.length; i++) {
          if (links[i].href.indexOf(placeholder) != -1)
            links[i].href = links[i].href.replace(placeholder, domain);
          if (links[i].textContent.indexOf(placeholder) != -1)
            links[i].textContent = links[i].textContent.replace(placeholder, domain);
        }
      })(document.getElementsByTagName("a"));
    </script>

    <script>
      var _gauges = _gauges || [];
      (function() {
        var t   = document.createElement('script');
        t.type  = 'text/javascript';
        t.async = true;
        t.id    = 'gauges-tracker';
        t.setAttribute('data-site-id', '52a79c748bfdf759e1000094');
        t.src = '//secure.gaug.es/track.js';
        var s = document.getElementsByTagName('script')[0];
        s.parentNode.insertBefore(t, s);
      })();
    </script>

    <script>
      (function() {
        if (!document.querySelector) return;
        window.addEventListener('load', function() {
          var footer = document.querySelector('body > footer');
          footer.addEventListener('touchstart', function() {
            var elem = footer.querySelector('.oh-hai');
            if (elem.classList) elem.classList.toggle('active');
          })
        })
      })()
    </script>
  </body>
</html>