<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>{{#if title}}{{title}} | {{/if}}{{siteTitle}}</title>
    <link rel="stylesheet" href="{{assets}}/css/2014.css?v2">
    <link rel="source" href="https://github.com/cssconfau/2014">
    <meta property="og:title" content="{{#if title}}{{title}} | {{/if}}{{siteTitle}}">
    <meta name="description" content="{{eventDescription}}">
    <meta property="og:description" content="{{eventDescription}}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{urlresolve rootUrl path}}">
    <meta property="og:image" content="{{urlresolve rootUrl '/images/og-logo.png'}}">
    <meta property="og:site_name" content="{{siteTitle}}">
    <link href="{{urlresolve rootUrl path}}" rel="canonical">
